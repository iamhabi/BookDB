<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="4dp">

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/default_height"
        android:gravity="center_vertical"
        android:text="Hello World!"
        android:textSize="@dimen/title_text_size"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_move_to_link"/>

    <ImageButton
        android:id="@+id/btn_move_to_link"
        android:layout_width="0dp"
        android:layout_height="@dimen/default_height"
        android:contentDescription="@string/open_in_browser"
        android:src="@drawable/open_in_browser"
        android:background="@android:color/transparent"
        app:layout_constraintDimensionRatio="H,1:0.8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/text_view_delete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_minimum_height"
        android:text="Delete"
        android:textSize="14sp"
        android:textColor="@android:color/holo_red_light"
        android:gravity="center_vertical"
        app:drawableEndCompat="@drawable/delete"
        app:drawableTint="@android:color/holo_red_light"
        app:layout_constraintTop_toBottomOf="@id/text_view_title"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_reading_state"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_minimum_height"
        app:layout_constraintTop_toBottomOf="@id/text_view_delete">

        <TextView
            android:id="@+id/text_view_reading_state_header"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Reading State"
            android:textSize="14sp"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/text_view_reading_state"/>

        <TextView
            android:id="@+id/text_view_reading_state"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Reading"
            android:textSize="14sp"
            android:gravity="center_vertical|right"
            app:layout_constraintStart_toEndOf="@id/text_view_reading_state_header"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_own_state"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_minimum_height"
        app:layout_constraintTop_toBottomOf="@id/layout_reading_state">

        <TextView
            android:id="@+id/text_view_own_state_header"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Owning State"
            android:textSize="14sp"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/text_view_own_state"/>

        <TextView
            android:id="@+id/text_view_own_state"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Owning"
            android:textSize="14sp"
            android:gravity="center_vertical|right"
            app:layout_constraintStart_toEndOf="@id/text_view_own_state_header"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>