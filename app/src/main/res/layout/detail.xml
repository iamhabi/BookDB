<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/colorBackground">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/layout_top"
       android:layout_width="match_parent"
       android:layout_height="@dimen/default_height"
       app:layout_constraintTop_toTopOf="parent">

       <ImageButton
           android:id="@+id/btn_close"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:contentDescription="@string/close"
           android:src="@drawable/chevron_left"
           android:background="@null"
           app:layout_constraintDimensionRatio="H,1:1"
           app:layout_constraintStart_toStartOf="parent" />

       <ImageButton
           android:id="@+id/btn_open_in_browser"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:contentDescription="@string/open_in_browser"
           android:src="@drawable/open_in_browser"
           android:background="@null"
           app:layout_constraintDimensionRatio="H,1:1"
           app:layout_constraintEnd_toEndOf="parent" />

   </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintTop_toBottomOf="@id/layout_top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <ImageView
                android:id="@+id/image_view_book_cover"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:contentDescription="@string/book_cover"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintHeight_max="300dp"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/text_view_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/text_margin_vertical"
                android:textSize="@dimen/title_text_size"
                android:lineSpacingExtra="@dimen/text_line_space"
                app:layout_constraintTop_toBottomOf="@id/image_view_book_cover"/>

            <TextView
                android:id="@+id/text_view_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/text_margin_vertical"
                android:textSize="@dimen/author_text_size"
                android:lineSpacingExtra="@dimen/text_line_space"
                app:layout_constraintTop_toBottomOf="@id/text_view_title"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/text_view_author">

                <TextView
                    android:id="@+id/text_view_group_header"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/text_margin_vertical"
                    android:gravity="center_vertical"
                    android:text="Group"
                    android:textSize="@dimen/description_text_size"
                    android:lineSpacingExtra="@dimen/text_line_space"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/spinner_group"/>

                <Spinner
                    android:id="@+id/spinner_group"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/text_view_group_header"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_reading_state"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_minimum_height"
                android:layout_marginTop="@dimen/text_margin_vertical"
                app:layout_constraintTop_toBottomOf="@id/layout_group">

                <TextView
                    android:id="@+id/text_view_reading_state_header"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/reading_state"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/spinner_reading_state"/>

                <Spinner
                    android:id="@+id/spinner_reading_state"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toEndOf="@id/text_view_reading_state_header"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_own_state"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_minimum_height"
                android:layout_marginBottom="@dimen/text_margin_vertical"
                app:layout_constraintTop_toBottomOf="@id/layout_reading_state">

                <TextView
                    android:id="@+id/text_view_own_state_header"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/owning_state"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/spinner_own_state"/>

                <Spinner
                    android:id="@+id/spinner_own_state"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toEndOf="@id/text_view_own_state_header"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/text_view_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/text_margin_vertical"
                android:textSize="@dimen/description_text_size"
                android:lineSpacingExtra="@dimen/text_line_space"
                app:layout_constraintTop_toBottomOf="@id/layout_own_state"/>

            <EditText
                android:id="@+id/edit_text_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/text_margin_vertical"
                android:background="@null"
                android:autofillHints="Comment"
                android:inputType="text"
                android:textSize="@dimen/description_text_size"
                android:lineSpacingExtra="@dimen/text_line_space"
                app:layout_constraintTop_toBottomOf="@id/text_view_description"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="LabelFor" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>